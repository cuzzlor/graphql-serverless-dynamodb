{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["ts-node-dev", "--inspect-brk=9229", "${workspaceFolder}/src/app.ts"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229,
            "restart": true,
            "timeout": 15000,
            "env": {
                "NODE_ENV": "dev",
                "PORT": "3000"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug-batch-load",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "node",
                "-r",
                "ts-node/register",
                "--inspect-brk=9229",
                "${workspaceFolder}/src/batch-load.ts",
                "../data/moviedata.json"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229,
            "restart": true,
            "timeout": 15000,
            "env": {
                "NODE_ENV": "dev",
                "PORT": "3000"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
