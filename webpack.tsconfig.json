{
    "compilerOptions": {
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "lib",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules"]
}
